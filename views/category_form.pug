extends layout

block content
    h1 #{title}

    form(method="POST" action="")
        div.form-group
            label(for="name") Category:
            input#name.form-control(type="text", name="name" placeholder="Enter category e.g. Phone, Tablet, etc." value=(undefined===category ? "" : category.name) )
        button.btn.btn-primary(type="submit") Submit
    if errors
        ul
            for error in errors
                li!= error.msg